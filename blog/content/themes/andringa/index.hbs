{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}



{{! The main content area on the homepage }}
<main class="content" role="main">
    <div class="blogPreview"></div>
    {{! Each post will be output using this markup }}
    {{#foreach posts}}

        <a href="{{url}}" class="blogPreview-link">
            <div class="blogPreview {{post_class}}">
                <div class="blogPreview-meta">
                    <h4 class="blogPreview-title">{{{title}}}</h4>
                    <span class="blogPreview-author">Peter Andringa | <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time></span>
                </div>
                <div class="blogPreview-post">
                <p>
                    {{excerpt}}&hellip;
                    <a href="<%= blogLink+'/'+posts[i].slug+'/' %>" class="blogPreview-continue">(Continued <i class="fa fa-arrow-right"></i>)</a>
                </p>
                </div>
            </div>
        </a>

    {{/foreach}}

    {{!! After all the posts, we have the previous/next pagination links }}
    {{pagination}}

</main>